<div id="dashboardBackground" class="back">
    <div class="clearPageDivider marginTop16 marginLeft16 marginRight16 marginBottom16"></div>

    <div id='dashboardNotificationContainer'>
        <div class="displayTable">
            <p id='notificationTitle' class="marginLeft12 marginRight12">Upcoming Due Dates:</p>
            <p id='notificationBody'>Notifications will be displayed here</p>

        </div>
        {{!-- placeholder for notification panel --}}
    </div>

    <div id='tagsContainer'>
        <a id='tagsTitle'>Tags:</a>
        <button class="tagButton">DummyTag</button>
        <button class="tagButton">DummyTag1</button>
    </div>

    <div class="clearPageDivider marginTop16 marginLeft16 marginRight16"></div>

    <div id="columnsContainer" class="marginBottom16">
        <div class="row">
            <div class="column c1" id="toDoColumn" ondragover="dashboardAllowDrop(event)" ondrop="dashboardOnDrop(event)">
                <h3 class="columnHeader marginLeft12 marginRight12">To Do:</h3>
                <div class="columnScrollView">
                    {{#each toDoCards}}
                    <div draggable="true" ondragstart="dashboardOnDrag(event)">
                        {{> 'taskCard' this}}
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="column c2" ondragover="dashboardAllowDrop(event)" ondrop="dashboardOnDrop(event)">
                <h3 class="columnHeader marginLeft12 marginRight12">In Progress:</h3>
                <div class="columnScrollView">
                    {{#each toDoCards}}
                    <div draggable="true" ondragstart="dashboardOnDrag(event)">
                        {{> 'taskCard' this}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="column c3" ondragover="dashboardAllowDrop(event)" ondrop="dashboardOnDrop(event)">
            <h3 class="columnHeader marginLeft12 marginRight12">Done:</h3>
            <div class="columnScrollView">
                {{#each doneCards}}
                <div draggable="true" ondragstart="dashboardOnDrag(event)">
                    {{> 'taskCard' this}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<script src="public/js/dashboard.js"></script>

<script>
    $( document ).ready( function () {

        $( '#toDoColumn' ).load( "taskCard.html" );

    } );
</script>
</div>